% Positioning for a logo
\LogoPosition{-1,-1.1}

\newcommand{\BSquareFrame}[1]{%
  \ifcolorBG
  \psframe[fillstyle=gradient,gradbegin=\colB,gradend=\colA,gradmidpoint=1]%
          (-2,-1.6)(12.1,9)
